<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/d5bfb13614.js" crossorigin="anonymous"></script>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- My CSS -->
    <link rel="stylesheet" href="./css/styles.css">
    <title>Car Management Dashboard</title>
</head>

<body>

    <!-- Side Bar -->
    <div class="sidenav">
        <!-- Nav Item - Logo -->
        <li class="nav-item mb-5">
            <a class="nav-logo" href="/">
                <span></span></a>
        </li>
        <!-- Nav Item - Dashboard -->
        <li class="nav-item mb-2 mt-1">
            <a class="nav-link" href="">
                <i class="fa-solid fa-house"></i>
                <span>Dashboard</span></a>
        </li>
        <!-- Nav Item - Cars -->
        <li class="nav-item mb-2" style="background-color: #CFD4ED;">
            <a class="nav-link" href="">
                <i class="fa-solid fa-truck"></i>
                <br>
                <span>Cars</span></a>
        </li>
    </div>

    <!-- Nav Bar -->
    <nav class="navbar navbar-expand-lg navbar-light py-0">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item" style="padding-left: 350px;">
                        <button id="sidebarToggle" class="btn sidebarToggle">
                            <i class="fas fa-bars"></i>
                    </li>
                </ul>
                <div class="nav-form">
                    <form class="d-flex">
                        <input class="form-control" type="search" style="font-size: smaller;" placeholder="Search"
                            aria-label="Search">
                        <button class="btn btn-outline-primary"
                            style="color:#0D28A6; font-weight: bold; font-size: smaller;" type="submit">Search</button>
                    </form>
                </div>
                <div class="profile">
                    <div class="dropdown">
                        <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton1"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="./images/profile.png" alt="">
                            Unis Badri
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                            <li><a class="dropdown-item" href="#"><i class="fa-solid fa-user"></i> Profile</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fa-solid fa-gear"></i> Settings</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fa-solid fa-arrow-right-from-bracket"></i>
                                    Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Responsive Side Bar -->
    <div class="page">
        <div class="sidebar">
            <div class="sidebar-header">
                <div class="sidebar-logo-container">
                    <div class="logo-container">
                        <a class="navbar-brand" href="/"></a>
                    </div>
                </div>
            </div>
            <div class="sidebar-body">
                <ul class="navigation-list">
                    <li class="navigation-list-item">
                        <a class="navigation-link" href="/">
                            <div class="row">
                                <div class="col-9">CARS</div>
                            </div>
                        </a>
                    </li>
                    <li class="navigation-list-item">
                        <a class="navigation-link" href="/">
                            <div class="row">
                                <div class="col-9">List Car</div>
                            </div>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="content-wrapper">
        <div class="container">
            <div class="row mb-lg-3">
                <div class="col-lg-10">
                    <p style="font-size: small;"><strong> Cars <i class="fa-solid fa-chevron-right"></i><a href="/"
                                style="color: black;"></strong> <strong> List Car <i
                                class="fa-solid fa-chevron-right"></i></strong></a>
                        Add New Car</p>
                </div>
                <div class="col-lg-2">
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-lg-10">
                    <p style="font-weight: bold; font-size: 20px;">Add New Car</p>
                </div>
            </div>
            <!-- add new cars -->
            <div class="container">
                <div class="card">
                    <form action="http://localhost:8000/cars" method="post" class="card-body">
                        <div class="row mb-3">
                            <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Nama</label>
                            <div class="col-sm-10">
                                <input type="text" name="name" class="form-control form-control-sm" id="colFormLabelSm"
                                    placeholder="Avanza">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Sewa
                                Per-Hari</label>
                            <div class="col-sm-10">
                                <input type="text" name="price" class="form-control form-control-sm" id="colFormLabelSm"
                                    placeholder="Rp.0,-">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Ukuran</label>
                            <div class="col-sm-10">
                                <select name="size" class="form-select form-select-sm"
                                    aria-label=".form-select-sm example">
                                    <option selected></option>
                                    <option value="small">Small</option>
                                    <option value="medium">Medium</option>
                                    <option value="large">Large</option>
                                </select>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Foto</label>
                            <div class="col-sm-10">
                                <input type="text" name="photo" class="form-control form-control-sm" id="colFormLabelSm"
                                    placeholder="Masukan Url Foto Disini">
                            </div>
                        </div>
                </div>

                <div id="carAdd" class="d-flex post-save" style="margin-top: 30%; margin-bottom: 5%;">
                    <a href="/" class="btn btn-outline-primary listcar rounded px-3 py-2"
                        style="color: #0D28A6; border-color: #0D28A6; border-width: 2px;"><strong>Cancel</strong></a>
                    <button type="submit" class="btn btn btn-primary rounded px-3 py-2 ms-4"
                        style="background-color:#0D28A6;">
                        Save</button>
                </div>

                </form>


                <!-- add new cars -->
            </div>
        </div>
    </div>

    <!-- Side Bar JavaScript -->
    <script>
        let sidebarToggle = document.querySelector(".sidebarToggle");
        sidebarToggle.addEventListener("click", function () {
            document.querySelector("body").classList.toggle("active");
            document.getElementById("sidebarToggle").classList.toggle("active");
        })
    </script>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous">
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous">
    </script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous">
    </script>
</body>

</html>